<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vue.springRest.api.user.mapper.UserMapper">
    <select id="userList" resultType="UserModel">
        <![CDATA[
        SELECT * FROM user;
        ]]>

    </select>
    <insert id="userJoin" useGeneratedKeys="true" keyProperty="user_no">
        <![CDATA[
        INSERT INTO user(
            user_id,
            user_pwd,
            user_name,
            user_email,
            user_addr,
            user_phone,
            user_date
        )VALUES(
            #{user_id},
            #{user_pwd},
            #{user_name},
            #{user_email},
            #{user_addr},
            #{user_phone},
            #{user_date}
            )
        ]]>
    </insert>

</mapper>
